<section class="text-center" style="background-color:rgba(5, 40, 0, 0.5);">
    <h2 class="form-header" style="margin-bottom: 0; padding-top: 15px;">-{{post.title}}-</h2>
    <p style="margin-bottom: 0; padding-top: 15px; color: var(--secondary-text);">{{post.content}}</p>
    <p class="text-right post-meta" style="padding: 20px 5px 5px 0;">Written by <span style="font-weight: bolder">{{post.account.username}}</span> on <span style="font-weight: bolder">{{fixDate post.created_at}}</span></p>

</section>


<section class="row justify-content-center">
  <div class="col-sm-12 col-md-8" style="border: dashed 2px var(--primary-text); margin: 30px 0; padding-left: 15px; padding-right: 15px;">
    <h3 class="form-header text-center">Comments</h3>
    {{#if post.comments}}
    <ol class="row justify-content-end">
        {{#each post.comments as |comment|}}
            {{> pop-comments}}
        {{/each}}
    </ol>
    {{/if}}
    <form class="row justify-content-center text-center" style="margin-bottom: 20px;">
      <div class="col-12 row form-section">
        <label class="col-sm-12 col-md-3" for="comment-content">New Comment:</label>
        <input class="col-sm-12 col-md-8" type="text" id="comment-content" name="post-title" value="Insert comment here!"/>
      </div>
      <button class="col-8 login-btn" type="submit">Add Comment</button>
    </form>
  </div>
</section>

<script src="/javascript/add-comment.js"></script>