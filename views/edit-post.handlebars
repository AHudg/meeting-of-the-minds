<section>
    <h2 class="form-header">Editting Post {{post.id}}</h2>

  <form class="row justify-content-center text-center">
    <div class="col-12 form-section">
      <label class="col-sm-12 col-md-3" for="post-title">Title:</label>
      <input class="col-sm-12 col-md-8" type="text" id="post-title" name="post-title" value="{{post.title}}"/>
    </div>
    <div class="col-12 form-section">
      <label class="col-sm-12 col-md-3" for="post-content">Content:</label>
      <input class="col-sm-12 col-md-8" id="post-content" name="post-content" value="{{post.content}}"/>
    </div>
    <div class="col-12 row justify-content-between">
      <button id="edit-btn" class="col-5 login-btn" type="submit">Edit Post</button>
      <button id="delete-btn" class="col-5 login-btn" type="submit">Delete Post</button>
    </div>
  </form>
</section>

{{#if post.comments}}
<section class="row justify-content-center">
  <div class="col-sm-12 col-md-8" style="border: dashed 2px var(--primary-text); margin: 30px 0; padding-left: 15px; padding-right: 15px;">
    <h3 class="form-header text-center">Comments</h3>

    <ol class="row justify-content-end">
        {{#each post.comments as |comment|}}
            {{> pop-comments}}
        {{/each}}
    </ol>
  </div>
</section>
{{/if}}

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>

