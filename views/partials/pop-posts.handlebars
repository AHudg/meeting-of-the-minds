<li class="col-12 row align-items-end">
    <h3 class="post-title sol-sm-12 col-md-6 text-left">{{title}}</h3>
    <span class="post-meta col-sm-12 col-md-6 text-right"> Created by <span style="font-weight: bolder">{{account.username}}</span> on <span style="font-weight: bolder">{{fixDate created_at}}</span></span>
    <div class="col-12 row" style="background-color: rgba(5, 40, 0, 0.5);">
        <p class="post-content col-12 text-left">{{content}}</p>
        {{#if comments}}
        <a href="/post/{{{id}}}" class="col-12 text-right post-meta" style="color: var(--primary-text); padding-bottom: 5px;">View {{comments.length}} Comments</a>
        {{else}}
        <a href="/post/{{{id}}}" class="col-12 text-right post-meta" style="color: var(--primary-text); padding-bottom: 5px;">View Comments</a>
        {{/if}}
    </div>
</li>